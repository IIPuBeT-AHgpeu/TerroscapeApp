            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="KillerWin" /> @Html.DisplayNameFor(model => model.KillerWin)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DonePlan" class="control-label"></label>
