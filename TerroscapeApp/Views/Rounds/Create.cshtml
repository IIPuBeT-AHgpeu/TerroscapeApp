            </div>
            <div class="form-group">
                <label asp-for="SecondPlayerId" class="control-label"></label>
                <select asp-for="SecondPlayerId" class ="form-control" asp-items="ViewBag.SecondPlayerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SecondAvatarId" class="control-label"></label>
                <select asp-for="SecondAvatarId" class ="form-control" asp-items="ViewBag.SecondAvatarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThirdPlayerId" class="control-label"></label>
                <select asp-for="ThirdPlayerId" class ="form-control" asp-items="ViewBag.ThirdPlayerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThirdAvatarId" class="control-label"></label>
                <select asp-for="ThirdAvatarId" class ="form-control" asp-items="ViewBag.ThirdAvatarId"></select>
            </div>
