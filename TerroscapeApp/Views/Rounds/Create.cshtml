                <label asp-for="FirstPlayerId" class="control-label"></label>
                <select asp-for="FirstPlayerId" class ="form-control" asp-items="ViewBag.FirstPlayerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FirstAvatarId" class="control-label"></label>
