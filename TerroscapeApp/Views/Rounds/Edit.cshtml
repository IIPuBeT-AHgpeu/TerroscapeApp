                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasPlans" /> @Html.DisplayNameFor(model => model.HasPlans)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GotKeys" /> @Html.DisplayNameFor(model => model.GotKeys)
                </label>
            </div>
