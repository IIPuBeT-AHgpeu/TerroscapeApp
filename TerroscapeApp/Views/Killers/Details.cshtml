@using TerroscapeApp.Service
@model TerroscapeApp.Database.Killer

@{
    ViewData["Title"] = "Подробности об убийце";
}

<h1>Информация об убийце</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Сила
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt class = "col-sm-2">
            Версия игры
        </dt>
        <dd class = "col-sm-10">
            @{
                var t1 = EnumsTranslation.GameNameTranslation.GetValueOrDefault(Model.GameName);
                if (t1 != null)
                    @Html.Raw(t1)
                else
                    @Html.Raw("Неизвестное значение")
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку убийц</a>
</div>
