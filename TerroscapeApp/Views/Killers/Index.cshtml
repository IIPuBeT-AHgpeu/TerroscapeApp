@using TerroscapeApp.Service
@model IEnumerable<TerroscapeApp.Database.Killer>

@{
    ViewData["Title"] = "Убийцы";
}

<h1>Убийцы</h1>

<p>
    <a asp-action="Create">Добавить новую убийцу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Сила
            </th>
            <th>
                Версия игры
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                    @{
                        var t1 = EnumsTranslation.GameNameTranslation.GetValueOrDefault(item.GameName);
                        if (t1 != null)
                            @Html.Raw(t1)
                        else
                            @Html.Raw("Неизвестное значение")
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
