@model TerroscapeApp.Database.Map

@{
    ViewData["Title"] = "Подробности о карте";
}

<h1>Подробности о карте</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Количество локаций
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationsNum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернутся к списку карт</a>
</div>
