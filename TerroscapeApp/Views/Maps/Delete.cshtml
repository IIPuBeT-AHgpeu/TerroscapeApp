@model TerroscapeApp.Database.Map

@{
    ViewData["Title"] = "Удаление карты";
}

<h3>Вы уверены, что хотите удалить карту "@Html.DisplayFor(model => model.Name)"?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Название карты:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Количество локаций:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationsNum)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку карт</a>
    </form>
</div>
