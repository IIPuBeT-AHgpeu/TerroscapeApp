@model TerroscapeApp.Database.Survivor

@{
    ViewData["Title"] = "Подробности о выжившем";
}

<h1>Информация о выжившем</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Состояние
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
           ID жертвы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avatar.Id)
        </dd>
        <dt class = "col-sm-2">
            ID игрока
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку выживших</a>
</div>
