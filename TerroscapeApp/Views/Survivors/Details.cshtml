@using TerroscapeApp.Service
@model TerroscapeApp.Database.Survivor

@{
    ViewData["Title"] = "Подробности о выжившем";
}

<h1>Информация о выжившем</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Состояние:
        </dt>
        <dd class = "col-sm-10">
            @{
                var t1 = EnumsTranslation.SurvivorStateTranslation.GetValueOrDefault(Model.State);
                if (t1 != null)
                    @Html.Raw(t1)
                else
                    @Html.Raw("Неизвестное значение")
            }
        </dd>
        <dt class = "col-sm-2">
            Жертва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avatar.Name)
        </dd>
        <dt class = "col-sm-2">
            Имя игрока:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Player != null)
                @Html.DisplayFor(model => model.Player!.Name)
            else
                @Html.Raw("BOT")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку выживших</a>
</div>
