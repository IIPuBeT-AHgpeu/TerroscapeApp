@using TerroscapeApp.Service
@model TerroscapeApp.Database.Survivor

@{
    ViewData["Title"] = "Удаление выжившего";
}

<h3>Вы уверены, что хотите удалить данную запись?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Состояние:
        </dt>
        <dd class = "col-sm-10">
            @{
                var t1 = EnumsTranslation.SurvivorStateTranslation.GetValueOrDefault(Model.State);
                if (t1 != null)
                    @Html.Raw(t1)
                else
                    @Html.Raw("Неизвестное значение")
            }
        </dd>
        <dt class = "col-sm-2">
           Жертва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avatar.Name)
        </dd>
        <dt class = "col-sm-2">
           Имя игрока:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Player != null) @Html.DisplayFor(model => model.Player!.Name) else @Html.Raw("BOT")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку выжившихt</a>
    </form>
</div>
