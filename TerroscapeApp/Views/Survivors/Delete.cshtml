@model TerroscapeApp.Database.Survivor

@{
    ViewData["Title"] = "Удаление выжившего";
}

<h3>Вы уверены, что хотите удалить выбранного выжившего?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Состояние
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
           ID жертвы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avatar.Id)
        </dd>
        <dt class = "col-sm-2">
           ID игрока
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку выжившихt</a>
    </form>
</div>
