@model TerroscapeApp.Database.Avatar

@{
    ViewData["Title"] = "Удаление жертвы";
}

<h3>Вы уверены, что хотите удалить жертву c именем "@Html.DisplayFor(model => model.Name)"?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Имя:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Навык 1:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstSkill)
        </dd>
        <dt class = "col-sm-2">
            Навык 2:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondSkill)
        </dd>
        <dt class = "col-sm-2">
            Версия игры:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку жертв</a>
    </form>
</div>
